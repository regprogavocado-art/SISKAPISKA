# Основные настройки СИСКАПИСКА
NODE_ENV=production
PORT=3000
FRONTEND_PORT=8080
DOCKER_VERSION=2.2

# PostgreSQL Database
POSTGRES_HOST=siskapiska-postgres
POSTGRES_PORT=5432
POSTGRES_DB=siskapiska
POSTGRES_USER=admin
POSTGRES_PASSWORD=siskapiska_secure_2024_change_me

# Redis Cache
REDIS_HOST=siskapiska-redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_me

# OpenAI API Settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ISPmanager Integration
ISPMANAGER_URL=https://your-ispmanager.com:1500
ISPMANAGER_USER=admin
ISPMANAGER_PASSWORD=your_ispmanager_password
ISPMANAGER_API_VERSION=6

# Domain Providers APIs
GODADDY_API_KEY=your_godaddy_api_key
GODADDY_API_SECRET=your_godaddy_api_secret
GODADDY_API_URL=https://api.godaddy.com

NAMECHEAP_API_USER=your_namecheap_user
NAMECHEAP_API_KEY=your_namecheap_api_key
NAMECHEAP_API_URL=https://api.namecheap.com

# Security Settings
JWT_SECRET=siskapiska_jwt_secret_key_2024_change_me
ENCRYPTION_KEY=siskapiska_encryption_key_256bit_change_me
API_RATE_LIMIT=100
SESSION_TIMEOUT=3600

# Monitoring & Logging
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=grafana_admin_password_change_me
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# SeoDor Site Cloner Integration
SITE_CLONER_ENABLED=true
SITE_CLONER_MAX_PAGES=100
SITE_CLONER_TIMEOUT=30
SITE_CLONER_USER_AGENT=SISKAPISKA/1.0 (SeoDor-based)

# Web Scraping Settings
SCRAPING_DELAY=1
SCRAPING_TIMEOUT=30
SCRAPING_RETRIES=3
PROXY_ROTATION=true

# Automation Settings
AUTO_DOMAIN_CHECK_INTERVAL=3600
AUTO_CONTENT_GENERATION=true
AUTO_DEPLOYMENT=false
MAX_CONCURRENT_TASKS=5

# Notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password